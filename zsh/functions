function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status
  fi
}
compdef g=git

function todo {
  atom ~/Dropbox\ \(Personnelle\)/todos/$1.todo
}

function list-todo {
  for i in ~/Dropbox\ \(Personnelle\)/todos/*; do echo $(basename $i | cut -f 1 -d '.') ":" $(wc -l < $i); done
}

function snippet {
  atom ~/Dropbox\ \(Personnelle\)/snippets/$1
}

function snippets {
  for i in ~/Dropbox\ \(Personnelle\)/snippets/*; do echo $(basename $i); done
}

function gifit {
  ruby ~/.dotfiles/dev_scripts/screengif/screengif.rb --input $1 --output $2
}
