function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status
  fi
}
compdef g=git

function todo {
  subl ~/Dropbox/todos/$1.txt
}

function list-todo {
  for i in ~/Dropbox/todos/*; do echo $(basename $i | cut -f 1 -d '.') ":" $(wc -l < $i); done
}

function snippet {
  subl ~/Dropbox/snippets/$1
}

function snippets {
  for i in ~/Dropbox/snippets/*; do echo $(basename $i); done
}